global logIndent = 0;

function increaseLogIndent() {
	logIndent++;
}

function decreaseLogIndent() {
	logIndent--;
}


function logDetail(str) {
	str = '  ↳ ' + str;

	for (var i = 0; i < logIndent; i++) {
		str = '  ' + str;
	}

	debug(str);
}

function logInfo(str) {
	if (logIndent > 0) {
		str = '↳ ' + str;
	}

	for (var i = 0; i < logIndent; i++) {
		str = '  ' + str;
	}

	debug(str);
}

function resetLogIndent() {
	logIndent = 0;
}
